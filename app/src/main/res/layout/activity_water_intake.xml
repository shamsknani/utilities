<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/WaterIntake"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00009688"
    android:contextClickable="false"
    android:outlineProvider="paddedBounds"
    tools:context=".WaterIntake">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="270dp"
        android:layout_height="454dp"
        android:foregroundTint="#009688"
        app:srcCompat="@drawable/glass"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="-20dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTint="#009688"
        android:ems="10"
        android:foregroundTint="#009688"
        android:inputType="textPersonName"
        android:rotationX="6"
        android:shadowColor="#009688"
        android:shadowDx="100"
        android:shadowDy="100"
        android:shadowRadius="100"
        android:singleLine="true"
        android:text="Water Intake"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textDirection="firstStrong"
        android:textStyle="normal|bold|italic"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="43dp"
        tools:text="Water Intake" />

</androidx.constraintlayout.widget.ConstraintLayout>