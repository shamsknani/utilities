<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBF4"
    android:foregroundTint="#009688"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="82dp"
        android:layout_height="0dp"
        android:layout_marginStart="109dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="351dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hh" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="134dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/teal_700"
        android:text="HEARTS"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        tools:backgroundTint="#009688"
        tools:inputType="textUri"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="45dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="112dp"
        android:layout_height="29dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="96dp"
        android:text="HEALTHY"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etusernameSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="142dp"
        android:backgroundTint="#009688"
        android:ems="10"
        android:hint="username"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/etPasswordSignup"
        app:layout_constraintStart_toStartOf="@+id/etPasswordSignup"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColorHint="#090909" />

    <EditText
        android:id="@+id/etPasswordSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:backgroundTint="#009688"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textColorHint="#090909"
        app:layout_constraintEnd_toEndOf="@+id/etconfirmPasswordSignup"
        app:layout_constraintStart_toStartOf="@+id/etconfirmPasswordSignup"
        app:layout_constraintTop_toBottomOf="@+id/etusernameSignup" />

    <EditText
        android:id="@+id/etconfirmPasswordSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:backgroundTint="#009688"
        android:ems="10"
        android:hint="confirm password"
        android:inputType="textPassword"
        android:textColorHint="#050505"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordSignup" />

    <Button
        android:id="@+id/btnsignupSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:backgroundTint="#009688"
        android:foregroundTint="#009688"
        android:onClick="login"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="@+id/etconfirmPasswordSignup"
        app:layout_constraintStart_toStartOf="@+id/etconfirmPasswordSignup"
        app:layout_constraintTop_toBottomOf="@+id/etconfirmPasswordSignup" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="245dp"
        android:layout_height="66dp"
        android:text="not on healthy hearts yet?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="447dp" />

</androidx.constraintlayout.widget.ConstraintLayout>